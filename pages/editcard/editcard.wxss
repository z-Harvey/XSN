/* pages/editcard/editcard.wxss */
.editcard {
  padding-bottom: 180rpx;
}
.showonoff{
  display: none;
}
.editcard .fixedWidth{
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #101010;
}
.editcard .row{
  height: 90rpx;
  line-height: 90rpx;
}
.editcard text.row{
  display: block;
}
.editcard .personinfo .row.wrap-flex{
  align-items: center;
}
.editcard .personinfo .row .rowleft{
  width: 70rpx;
}
.personinfo .row .rowright{
  margin-left: 16rpx; 
  padding-left: 16rpx; 
  display: inline-block;
}
/* .personinfo .row.sexline{
  justify-content: flex-start;
} */
.editcard .sexbtn{
  flex-grow: 0;
  flex-basis: 160rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  background-color: rgba(241, 241, 241, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: center;
  display: inline-block;
  margin-left: 30rpx;
}
.editcard .sexbtn.active{
  background: #FF9800;
  color: #fff;
}
.personinfo{
  position: relative;
}
.personinfo .picture{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.personinfo .picture>image{
  height:120rpx;
  width: 120rpx;
}
.personinfo .mask{
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(rgba(255,255,255,0) 50%,rgba(5, 5, 5, 0.3) 50%);
  border-radius: 50%;
  right: 0rpx;
  top: 0rpx;
  position: absolute;
}
.personinfo .mask>image{
  width: 50rpx;
  z-index: 100;
  position: absolute;
  bottom: 10rpx;
  left: 35rpx;
}
.editcard .require{
  padding-bottom: 15rpx;
}
.editcard .require textarea.rowinput{
  height: auto;
  margin: 14rpx 0;
  padding-left: 16rpx;
}
.editcard .require input.rowinput{
  padding-left: 16rpx;
}
.editcard .require .rowright{
  color: #ccc;
}
.editcard .location{
  padding-bottom: 0rpx;
}
.editcard .rowinput.address{
  min-height: 120rpx;
  color: #888;
  background-color: #f1f1f1;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 30rpx;
}
.editcard .location input.locationinput{
  width: 420rpx;
  height: 60rpx;
  line-height: 60rpx;  
  margin-right: 16rpx;
}
.editcard .location .getlocbtn{
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;  
  border-radius: 6rpx;
  color: rgba(255, 152, 0, 1);
  font-size: 28rpx;
  text-align: center;
  font-family: Arial;
  border: 1px solid rgba(255, 152, 0, 1);
  box-sizing: border-box;
}
.editcard .location .getlocbtn>image{
  width: 36rpx;
  vertical-align: middle;
  margin-right: 16rpx;
  margin-top:-4rpx;
}
button.btnbottomsecond{
  bottom: 95rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(255, 152, 0, 0.47);
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
}
view.btnbottomsecond{
  width:110rpx;
  bottom: 97rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  z-index: 1000;
}
.wrap-flex{
  align-items: center;
}
.editcard .salepro .add{
  width: 48rpx;
  border-radius: 50%;
  height: 48rpx;
  border: 2rpx solid #101010;
  margin-top: 35rpx;
  font-size: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
textarea{
  position: static;
}
.picture{
  position: relative;
}
.cameraBox{
  width:120rpx;
  height:60rpx;
  position: absolute;
  top:60rpx;
  left:0;
  border-radius:0 0 60rpx 60rpx;
  background:rgba(16, 16, 16, 0.5);
}
.cameraBox>image{
  width:44rpx;
  height:44rpx;
  margin:6rpx 0 0 38rpx;
}