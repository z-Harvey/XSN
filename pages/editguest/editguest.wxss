/* pages/markguest/markguest.wxss */
@import "../../template/comitem/comitem.wxss";
.item {
  margin-top: 0;
  border-radius: 0;
}
.ref{
  background: #fff;
  padding: 30rpx;
}
.refinfo>image{
  width: 50rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}
.refinfo .refbtn{
  margin: 20rpx 0;
}
.warninfo{
  margin-top: 20rpx;
}
.activebtn{
  background-color: rgba(255, 152, 0, 1);
  color: rgba(255, 255, 255, 1);
}


page{
  height: 100%;
}
.markresult{
  background: #fff;
  height: 100%;
}
.seleBox{
  width:690rpx;
  position: relative;
}
.seleClick{
  width:100%;
  height:60rpx;
  border:1rpx solid #bbb;
  border-radius: 6rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
  color:#888;
  position: relative;
}
.seleClick>image{
  width:24rpx;
  height:24rpx;
  position: absolute;
  right:16rpx;
  top:16rpx;
}
.seleContent{
  width:690rpx;
  max-height: 450rpx;
  position: absolute;
  background: #fff;
  font-size: 28rpx;
  box-shadow: 1rpx 1rpx 5rpx 5rpx rgba(236,236,237,1);
  text-align: center;
}
.seleContent>view{
  height:360rpx;
  overflow: auto;
}
.seleContent>view>view{
  height:90rpx;
  line-height: 90rpx;
  padding-left:20rpx;
  text-align: left;
  position: relative;
}
.seleContent>view>view>image{
  width:40rpx;
  height: 40rpx;
  position: absolute;
  top:20rpx;
  right:40rpx;
}
.seleContent>button{
  height:90rpx;
  border:0;
  border-top:1rpx solid #ececed;
  font-size: 28rpx;
  line-height: 90rpx;
  border-radius: 0;
  background:#fff;
  color:rgba(255, 152, 0, 1);
}
.seleContent>button::after{
  border:0;
}