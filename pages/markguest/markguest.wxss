/* pages/markguest/markguest.wxss */
@import "../../template/comitem/comitem.wxss";
.markguest{
  width: 100%;
  height:100%;
  background:rgba(16, 16, 16, .5);
}
.markCenBox{
  width:685rpx;
  height:764rpx;
  border-radius:8rpx;
  margin:0 auto 0;
  font-size: 28rpx;
  background:#fff;
  text-align: center;
  position: relative;
  top:170rpx;
}
.markCenBox>.markTitle{
  width:648rpx;
  height:84rpx;
  padding: 20rpx;
  line-height: 42rpx;
  text-align: left;
  background: rgba(255, 172, 55, 1);
  color: #fff;
  border-radius:10rpx 10rpx 0 0 
}
.refbtn{
  display: flex;
  padding:0 16rpx;
  justify-content: space-around
}
.refbtn>view>button{
  width:150rpx;
}
.refinfo2>.refbtn{
  display: block;
}
.refinfo2>.refbtn>button:first-child{
  margin-right:24rpx;
}
.refinfo2>.refbtn>button:last-child{
  margin-left: 24rpx;
}
.refinfo{
  margin:40rpx auto 20rpx;
}
.warninfo{
  width:670rpx;
  height:60rpx;  
  position: absolute;
  bottom: 100rpx;
  text-align: left;
  font-size: 24rpx;
  line-height: 60rpx;
  background:rgba(0,0,0,.08);
  color:#888;
  padding-left:20rpx;
}
.warninfo>text{
  position: absolute;
  top:0rpx;
  left: 52rpx;
}
.warninfo>image{
  position: absolute;
  top:16rpx;
  left: 20rpx;
  width:28rpx;
  height:28rpx;
}
.marContent{
  font-size: 24rpx;
  margin-top:64rpx;
}
.marContentYes{
  font-size: 24rpx;
  margin-top:24rpx;
}
.marContent>text:last-child{
  color:rgba(255, 152, 0, 1);
}
.markCenBox>.goBtnBox{
  width:690rpx;
  height:100rpx;
  display: flex;
  justify-content: space-around;
  position: absolute;
  left:0;
  bottom: 0;
}
.markCenBox>.goBtnBox>button{
  width:50%;
  border-radius: 0;
  height:100rpx;
  font-size: 32rpx;
  line-height: 100rpx;
}
.markCenBox>.goBtnBox>button:last-child{
  border-left:1rpx solid rgba(0,0,0,.08);
  color:rgba(255, 152, 0, 1);
}
.markCenBox>.goBtnBox>button:active{
  border-radius: 0;
  border:0;
}

page{
  height: 100%;
}
.markresult{
  background: #fff;
  height: 100%;
}
.process{
  text-align: center;
}
.process image{
  width: 190rpx;
  margin: 50rpx 0 60rpx;
  animation: name1 1s infinite linear;
}
@keyframes name1{
  0%{
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}
.seleInp{
  width:650rpx;
  margin:0 auto;
  height:60rpx;
  border-radius: 6rpx;
  border:1rpx solid rgba(187, 187, 187, 1);
  position: relative;
}
.seleInp>text{
  color:rgba(187, 187, 187, 1);
  line-height: 60rpx
}
.seleInpContent{
  position: absolute;
  width:650rpx;
  height:390rpx;
  background:#fff;
  color:rgba(16, 16, 16, 1);
  border-radius:0; 
  font-size: 28rpx;
  top:62rpx;
  box-shadow: 0 0 20rpx rgba(255,255,255,1);
  z-index: 9;
}
.seleInpContent>view{
  height:300rpx;
  overflow: auto;
}
.seleInpContent>view>view{
  height:90rpx;
  line-height: 90rpx;
  position: relative;
}
.seleInpContent>view>view>image{
  position: absolute;
  right:0;
  width:28rpx;
  height:28rpx;
  margin:32rpx 50rpx 0 0;
}
.seleInpContent>button{
  font-size: 28rpx;
  line-height: 90rpx;
  height:90rpx;
  color:rgba(255, 152, 0, 1);
  background:#fff;
  border-top:2rpx solid rgba(0,0,0,.08);
  border-radius: 0;
}
.seleInpContent>button::after{
  border: 0;
  border-radius: 0;  
}
.seleInp>image{
  width:30rpx;
  height:30rpx;
  float: right;
  margin:15rpx 15rpx 0 0;
}