/* pages/myactivity/myactivity.wxss */
.activity-item{
  padding: 20rpx 30rpx;
  background: #fff;
  margin-top: 20rpx;
}
.myactivity .picture{
  position: relative;
  height: 340rpx;
}
.myactivity .picture>image{
  width: 100%;
  height: 340rpx;
}
.picture .bannertitle{
  position: absolute;
  bottom: 0;
  left: 0;
  min-height: 80rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
  font-family: Arial;
  padding: 4rpx 16rpx 0;
  background: rgba(16, 16, 16, 0.3);
  width: 690rpx;
  box-sizing: border-box;
  display: flex;
  align-items:center;
}
.activity-row:first-child{
  margin-top: 10rpx;
}
.activity-row{
  height: 60rpx;
  line-height: 60rpx;
}
.activity-row>image{
  width: 32rpx;
  margin: 0 10rpx 0 16rpx;
  vertical-align: middle;
}

.blankBox{
  height:1000rpx;
  text-align: center
}
.blankBox > image{
  width: 216rpx;
  height:216rpx;
  display: inherit;
  margin: 94rpx auto 112rpx;
}

.blankBoxText{
width: 112px;
height: 16px;
color: rgba(16, 16, 16, 1);
text-align: left;
font-family: PingFangSC-regular;
}

.navHome{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  background:rgba(255, 152, 0, 1);
  text-align: center;
  color: #fff;
  line-height: 96rpx;
}