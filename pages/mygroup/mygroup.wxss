/* pages/mygroup/mygroup.wxss */
.mygroup{
  padding-bottom:20rpx;
}
.headnav {
  height: 90rpx;
  line-height: 90rpx;
  background: white;  
  align-items: center;
  justify-content: space-between;
  padding:0 30rpx;
  color: #888;
}
.headnav .active{
  color: #FF9800;
  position: relative;
}
.headnav .active::after{
  position: absolute;
  content: '';
  width: 30rpx;
  height: 4rpx;
  background: #FF9800;
  bottom: -10rpx;
  left: 45rpx;
}
.headitem>view{
  display: inline-block;
}
.headitem>view:first-child{
  margin-right: 76rpx;
}

.mygroup .mygroup-item{
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx 20rpx 0;
}
.list-header .mygroup-row>image{
  width: 60rpx;
  vertical-align: middle;
  margin: 0 14rpx 0 0;
  border-radius: 50%;  
} 
.list-header .mygroup-row>image.shakehand{
  width: 36rpx;
  vertical-align: middle;
  margin: 0 16rpx;
}
.list-header .state{
  height: 60rpx;
  line-height: 60rpx;
  color: #FF9800;
}
.list-row.companyname{
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  color: rgba(255, 152, 0, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Microsoft Yahei;
  border: 1px dotted rgba(255, 152, 0, 1);
  margin: 20rpx 0 16rpx;
  display: inline-block;
  padding: 0 30rpx;
}
.list-footer{
  height: 90rpx;
  line-height: 90rpx;
  border-top: 2rpx solid #F8F8F8;
  align-items: center;
}
.last-row{
  padding-bottom: 10rpx;
}
.list-footer button{
  display: inline-block;
  width: 164rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
  text-align: center;
  font-family: Microsoft Yahei;
  margin-left: 10rpx;
}
.list-footer button.evaluate,.list-footer button.process,.list-footer button.agreen,.list-footer button.agreen1,.list-footer button.process1,.list-footer button.evaluate1{
  background-color: rgba(255, 152, 0, 1);
  color: rgba(255, 255, 255, 1);
}
.list-footer button.del,.list-footer button.del1{
  color: #888;
  background: #f1f1f1;
}
.list-footer button.end,.list-footer button.end1{
  color: rgba(255, 152, 0, 1);
  border: 2rpx solid rgba(255, 152, 0, 1);
}
.time{
  width: 32rpx;
  vertical-align: middle;
}

.blankBox{
  height:1000rpx;
  text-align: center
}
.blankBox > image{
  width: 216rpx;
  height:216rpx;
  display: inherit;
  margin: 94rpx auto 112rpx;
}

.blankBoxText{
width: 112px;
height: 16px;
color: rgba(16, 16, 16, 1);
text-align: left;
font-family: PingFangSC-regular;
}

.navHome{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  background:rgba(255, 152, 0, 1);
  text-align: center;
  color: #fff;
  line-height: 96rpx;
}
.mystBox{
  position: relative;
}
.myst{
  position: absolute;
  top:0;
  right:-16rpx;
  background: red;
  width:16rpx;
  height:16rpx;
  border-radius: 50%;
}