}
.listContent{
  padding: 0 20rpx 20rpx 116rpx;
  font-size: 28rpx;
  color:#101010;
  border-bottom: 2rpx solid rgba(240, 239, 245, 1);
  margin-bottom: 30rpx;
  margin-top:-20rpx;
}
.textState{
  background: rgba(255, 152, 0, 1);
  color:#fff;
  width:66rpx;
