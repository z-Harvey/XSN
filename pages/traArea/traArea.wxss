.nav{
  width:100%;
  height:100rpx;
  padding:0rpx 30rpx;
  position: fixed;
  top:0rpx;
  left:0rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color:#888;
  background: #fff;
}
.navList>view{
  display: inline-block;
  margin-right: 60rpx;
}
.navSele{
  float: right;
  width:30rpx;
  height:30rpx;
}
.navSele>image{
  width:30rpx;
  height:30rpx;
}
.slider{
  height:9rpx;
  background: rgba(255, 152, 0, 1);
  position: absolute;
  top:75rpx;
  transition: ease .2s;
}

.infoFor{
  width:690rpx;
  border-radius:10rpx;
