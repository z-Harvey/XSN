  margin: 0 auto;
  padding-bottom: 30rpx;
}
.userInfo{
  padding:32rpx 20rpx 20rpx;
}
.nameImg{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;  
  margin-right: 16rpx;
}
.nameImg>image{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;  
}
.userText{
  height:80rpx;
  font-size: 28rpx;
  color:#101010;
  display: inline-block;
}
.userName{
  margin-bottom:8rpx;
}
.userTapLv{
