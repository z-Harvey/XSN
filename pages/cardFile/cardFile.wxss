@import "../../template/chat/chat.wxss";
@import "../../template/search/search.wxss";
.search{
  padding-bottom: 50rpx;
}
.searchInfo{
  padding: 0 30rpx;
  box-sizing: border-box;
  height: 80rpx;
  background: #fff;
}
.noresult{
  text-align:center;
  margin-top: 400rpx;
}
page {
  height: 100%;
}

.mask {
  width: 100%;
  height: 100%;
  line-height: 40rpx;
  border-radius: 10rpx;
  background: rgba(0, 0, 0, 0.8);
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.mask .maskContent {
  background: white;
  width: 570rpx;
  height: 300rpx;
  z-index: 999;
   position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.mask .head {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  color: #ff6428;
  background: white;
  height: 90rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}

.mask .content {
  text-align: left;
  font-size: 24rpx;
  color: #666;
  padding: 40rpx 34rpx;
  line-height: 36rpx;
}
.mask .footer{
  height: 90rpx;
  line-height: 90rpx;  
}
.mask .footer button{
  height: 90rpx;
  line-height: 90rpx; 
}

