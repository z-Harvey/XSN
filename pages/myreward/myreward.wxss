/* pages/mygroup/mygroup.wxss */
.mygroup{
  padding-bottom:20rpx;
}
.headnav {
  height: 90rpx;
  line-height: 90rpx;
  background: white;  
  align-items: center;
  justify-content: space-between;
  padding:0 30rpx;
  color: #888;
}
.headnav .active{
  color: #FF9800;
  position: relative;
}
.headnav .active::after{
  position: absolute;
  content: '';
  width: 30rpx;
  height: 4rpx;
  background: #FF9800;
  bottom: -10rpx;
  left: 45rpx;
}
.headitem>view{
  display: inline-block;
  position: relative;
}
.headitem>view>.redBot{
  width:16rpx;
  height:16rpx;
  position: absolute;
  top:0rpx;
  right:-16rpx;
  border-radius: 50%;
  background: red;
}
.headitem>view:first-child{
  margin-right: 76rpx;
}

.mygroup .mygroup-item{
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx 20rpx 0;
}
.list-header .mygroup-row>.txBox{
  width:60rpx;
  margin: 0 14rpx 0 0;  
  height:60rpx;
  border-radius:50%;  
  overflow: hidden;
}
.list-header .mygroup-row>.txBox>image{
  width:60rpx;
  height:60rpx;
}
.imBoxOptions{
  position: relative;
}
.imBoxOptions>text{
  position: absolute;
  top:15rpx;
  left:80rpx;
}
.list-header .state{
  height: 60rpx;
  line-height: 60rpx;
}
.list-row.companyname{
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  color: rgba(255, 152, 0, 1);
  font-size: 24rpx;
  text-align: center;
  font-family: Microsoft Yahei;
  border: 1px dotted rgba(255, 152, 0, 1);
  margin: 20rpx 0 16rpx;
  display: inline-block;
  padding: 0 30rpx;
}
.last-row{
  padding-bottom: 10rpx;
}
.list-footer{
  height: 90rpx;
  line-height: 90rpx;
  border-top: 2rpx solid #F8F8F8;
  align-items: center;
  justify-content: space-between;
}
.looknum>image{
  width: 24rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
    

.blankBox{
  text-align: center
}
.blankBox > image{
  width: 216rpx;
  height:216rpx;
  display: inherit;
  margin: 94rpx auto 112rpx;
}

.blankBoxText{
width: 112px;
height: 16px;
color: rgba(16, 16, 16, 1);
text-align: left;
font-family: PingFangSC-regular;
}

.navHome{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  background:rgba(255, 152, 0, 1);
  text-align: center;
  color: #fff;
  line-height: 96rpx;
}