/* pages/activityInfo/activityInfo.wxss */
@import "../../template/comheader/comheader.wxss";
@import "../../template/reward/reward.wxss";
page{
  height: 100%;
}
.activityInfo{
  flex-direction: column;
  height: 100%;  
}
.unlock{
  position: relative;
}
.unlock>image{
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 100%;
}
.mask{
  position: absolute;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.9);
  text-align: center;
  top: 0;
  left: 0;
}
.mask .title{
  margin: 112rpx 0 20rpx;
}
.mask .markbtn{
  height: 96rpx;
  line-height: 96rpx;
  background-color: rgba(255, 152, 0, 1);
  color: rgba(255, 255, 255, 1);
  text-align: center;
}

.activityInfo {
  position: relative;
}
.activityInfo .indextop{
  position: absolute;
  right: 0;
  top: 70rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  background: rgba(255, 152, 0, 1);
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}
