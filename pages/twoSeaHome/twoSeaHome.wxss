/* pages/search/search.wxss */
@import "../../template/comitem/comitem.wxss";
@import "../../template/roll/roll.wxss";
@import "../../template/search/search.wxss";
page{
  height:100%;
}
.bottomview{
  text-align: center;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}
.searchInfo{
  width:100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  height: 80rpx;
  background: #fff;
  position: fixed;
  top:0;
  left:0;
  z-index: 9
}
.noresult{
  text-align:center;
  margin-top: 400rpx;
}

.search .closebtn{
  position: absolute;
  width: 100rpx;
  height: 70rpx;
  right: 30rpx;
  top: 0rpx;
  z-index: 100
}
.searchinput image.close{
  right: 0;
  top: 20rpx;
}

.linkageList{
  width:100%;
  height:100rpx;
  background:#fff;
  display: flex;
  justify-content: space-around;
  position: fixed;
  top:80rpx;
  left:0;
  z-index: 9;
}
.linkageList>view{
  width: 45%;
  height:100rpx;
  text-align: center;
  color:#000;
  line-height: 100rpx;
}
.linkageList>.acetiv{
  color:rgba(255, 152, 0, 1);
}
.linkageList>view>image{
  width:24rpx;
  height:24rpx;
  color: #000;
}
.ulLst{
  width: 100%;
  height:890rpx;
  background:rgba(16, 16, 16, .55);
  display: flex;
  position: fixed;
  top:180rpx;
  left:0;
  justify-content: space-around;
  z-index: 9;
}
.ulLst>view{
  position: relative;  
  width:100%;
  height:494rpx;
  background: #fff;
  border:1rpx solid #BBBBBB;
}
.ulLstTitle{
  text-align: center;
  font-size: 28rpx;
  margin-top:40rpx;
}
.ulLstButs1{
  width:700rpx;
  display: flex;
  justify-content: space-around;
  margin:20rpx auto 0;
}
.ulLstButs1>view{
  width:150rpx;
  height:60rpx;
  border-radius: 6rpx;
  background:#F0EFF5;
  text-align: center;
  line-height: 60rpx
}
.ulLstButs2{
  width:168rpx;
  margin:0 auto;
  display: flex;
  justify-content: space-between;
}
.ulLstButs2>view{
  width:60rpx;
  height:60rpx;
  margin-top: 20rpx;
  border-radius: 6rpx;
  background:#F0EFF5;
  text-align: center;
  line-height: 60rpx
}
.ulLstButs3{
  width: 100%;
  height: 120rpx;
  position: absolute;
  bottom: 0;
}
.ulLstButs3>button{
  float: left;
  font-size: 28rpx;
  color:#fff;
  line-height: 80rpx;
  background:#BBBBBB;
  
}
.ulLstButs3>button:first-child{
  width:160rpx;
  height:80rpx;
  margin:20rpx 20rpx 0 30rpx;
}
.ulLstButs3>button:last-child{
  margin:20rpx  0 0 0 ;
  width:510rpx;
  height:80rpx;
  background: #FF9800;
}
.ulLst>view>view>.relaActiv{
  background: #FF9800;
  color:#fff;
}
.ulLst>.pxs{
  height:450rpx;
  padding-left: 30rpx;
}
.ulLst>.pxs>view{
  height:90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color:#888888;
  position: relative;
}
.ulLst>.pxs>view>image{
  width:28rpx;
  height:28rpx;
  position: absolute;
  right:28rpx;
  top:38rpx;
}
.pxscli>text{
  color:#FF9800;
}
.MerchantList{
  width:632rpx;
  border-radius: 10rpx;
  margin: 0 auto 20rpx;
  background: #fff;
  padding:30rpx 20rpx 28rpx;
  position: relative
}
.merImg{
  width:100rpx;
  height:100rpx;
  border: 1rpx solid rgba(255, 152, 0, 1);
  border-radius: 50%;
}
.merImg>image{
  width:100rpx;
  height:100rpx;
}
.merlistTitle{

}
.merImgList{

}
.merImgList>view{
  float: left;
  margin-right: 4rpx;
}
.merImgList>text{
  float: left;
  color:rgba(136, 136, 136, 1);
  line-height: 50rpx
}
.merImgList>view>image{
  width: 40rpx;
  height:40rpx;
  border-radius: 50%;
}
.merBut{
  position: absolute;
  right: 20rpx;
  width: 160rpx;
  height:50rpx;
  border:1rpx solid rgba(255, 152, 0, 1);
  border-radius: 6rpx;
  color:rgba(255, 152, 0, 1);
  line-height: 50rpx;
  background: #fff;
}
.merBut::after{
  border:0;
}
.sizeSeat{
  height:200rpx;
}
.merImg{
  float: left;
}
.content_right{
  margin-left:18rpx;
  display: inline-block;  
  width:500rpx;
}
.content_right>button{
  float: right;
}
.roll{
  width:100%;
  top:180rpx;
}
.GoTop{
  width:88rpx;
  height:88rpx;
  position: fixed;
  bottom: 200rpx;
  right:20rpx;
  border-radius: 50%;
  z-index: 9;
}
.GoTop>image{
  width:88rpx;
  height:88rpx;
}