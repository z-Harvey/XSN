/* pages/search/search.wxss */
@import "../../template/comitem/comitem.wxss";
@import "../../template/search/search.wxss";
.bottomview{
  text-align: center;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}
.searchInfo{
  width:100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  height: 80rpx;
  background: #fff;
  position: fixed;
  top:0;
  left:0;
  z-index: 9
}
.noresult{
  text-align:center;
  margin-top: 400rpx;
}

.search .closebtn{
  position: absolute;
  width: 100rpx;
  height: 70rpx;
  right: 30rpx;
  top: 0rpx;
  z-index: 100
}
.searchinput image.close{
  right: 0;
  top: 20rpx;
}

.linkageList{
  width:100%;
  height:100rpx;
  background:#fff;
  display: flex;
  justify-content: space-around
}
.linkageList>view{
  width: 33.3%;
  height:100rpx;
  text-align: center;
  color:#000;
  line-height: 100rpx;
}
.linkageList>.acetiv{
  color:rgba(255, 152, 0, 1);
}
.linkageList>view>image{
  width:24rpx;
  height:24rpx;
  color: #000;
}
.ulLst{
  width: 100%;
  height:890rpx;
  background:rgba(16, 16, 16, .55);
  display: flex;
  justify-content: space-around;
}
.ulLst>view{
  width:50%;
  height:720rpx;
}
.ulLst>view:first-child{
  background: rgba(241, 241, 241, 1);
  overflow: auto;
}
.ulLst>view:last-child{
  background: #fff;  
  overflow: auto;
}
.ulLst>view>view{
  width:80%;
  height:90rpx;
  line-height: 90rpx;
  padding-left:30rpx;
}
.MerchantList{
  width:632rpx;
  height:108rpx;
  border-radius: 10rpx;
  margin: 0 auto 20rpx;
  background: #fff;
  padding:30rpx 20rpx 28rpx;
  position: relative
}
.merImg{
  width:100rpx;
  height:100rpx;
  border: 1rpx solid rgba(255, 152, 0, 1);
  border-radius: 50%;
}
.merImg>image{
  width:100rpx;
  height:100rpx;
}
.merlistTitle{
  position: absolute;
  top:28rpx;
  left:136rpx;
}
.merImgList{
  position: absolute;
  top:86rpx;
  left: 136rpx;
}
.merImgList>view{
  float: left;
  margin-right: 4rpx;
}
.merImgList>text{
  float: left;
  color:rgba(136, 136, 136, 1);
  line-height: 50rpx
}
.merImgList>view>image{
  width: 40rpx;
  height:40rpx;
  border-radius: 50%;
}

.merBut{
  position: absolute;
  bottom:26rpx;
  right: 20rpx;
  width: 160rpx;
  height:50rpx;
  border:1rpx solid rgba(255, 152, 0, 1);
  border-radius: 6rpx;
  color:rgba(255, 152, 0, 1);
  line-height: 50rpx;
  background: #fff;
}
.merBut::after{
  border:0;
}
.sizeSeat{
  height:100rpx;
}