.cardinfo>image{
  width: 100rpx;
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
}
.btn-bottom{width: 100%;height: 96rpx;align-items: center;}
.btn-bottom>button{background: #FF9800;color: #fff;border-radius: 0;height: 100%;}
.btn-bottom>button.activebtn{background: #FF9800;}
.btn-bottom>button.firstbtn{border-right: 1rpx solid #fff;}

.cardheader {
  position: relative;
}
.cardheader .border{
  border-style: solid;
  border-color:#FFAD01 transparent transparent #FFAD01;
  border-width: 100rpx;
}
.cardheader .bg{
  height: 100rpx;
  background: #FFAD01;
}
.personInfo{
  height: 400rpx;
  background: #fff;
  position: absolute;
  left: 30rpx;
  top: 0rpx;
  box-sizing: border-box;
}
.fixedWidth{
  background: #fff;
}
.comperson{
  height: 90rpx;
  margin-top: 120rpx;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.comperson .right{
  text-align: right;
}
.comperson .right>image.rightarrow,.common .right>image.rightarrow{
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}
.common .right>image.rightarrow{
  margin-top: 8rpx;
}
.common{
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.evaluate {
  padding: 0 20rpx;
}
.evaluate .title{
  align-items: center;
  height: 90rpx;
}
.evalbtn{
  padding-bottom: 20rpx;
}
.evalbtn button{
  width: 140rpx;
  height: 50rpx;
  border-radius: 84rpx;
  background-color: rgba(241, 241, 241, 1);
  color: rgba(16, 16, 16, 1);
  font-size: 20rpx;
  text-align: center;
  display: inline-block;
  margin-right: 30rpx;
}
.evalbtn button:last-child{
  margin-right: 0;
}

.product{
  color: #686868;
  margin-top: 20rpx;
}
.product:last-child{
  padding-bottom: 30rpx;
}
.product::before{
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background-color: rgba(255, 152, 0, 1);
  border-radius: 50%;
  margin-right: 6rpx;
}

.location{
  margin-top: 20rpx;
}
.header{
  padding: 30rpx;
}
.row .line{
  margin:0 10rpx;
}
.row.com1010>image{
  width: 24rpx;
  vertical-align: middle;
  margin-left: 4rpx;
} 
.header-right{
  text-align: right;
}
.header-right >image{
  width: 100rpx;
  border-radius: 50%;
}
.header-right .nick>image{
  width: 24rpx;
  margin-right: 2rpx;
  vertical-align: middle;
}
.rowline.first{
  margin-top: 30rpx;
}
.rowleft>image,.rowline>image{
  margin-right: 10rpx;
  width: 28rpx;
  vertical-align: middle;
}
.rowline.wrap-flex{
  align-items: center;
}
.rowline .www{
  width: 84rpx;
  height: 36rpx;
  line-height: 36rpx;  
  border-radius: 80rpx;
  background-color: rgba(255, 152, 0, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 20rpx;
  text-align: center;
  display: inline-block;
}

.location>image{
  width: 32rpx;
  margin-right: 5rpx;
}
